                                <div class="each-product">
                                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>" class="product-image img-responsive">
                                        <img style="width:152px;" src="<?php echo $this->helper('catalog/image')->init($_link, 'thumbnail')->backgroundColor(array(0, 0, 0))->constrainOnly(false)->keepAspectRatio(true)->keepFrame(true)->resize(200, 200) ?>" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" />
                                    </a>
                                    <h3 class="caption product-title product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a></h3>
